extends ..//..//layouts/default.pug
include ..//..//mixins/alert.pug

block main 
    +alert-error(3000)

    h1(class="mb-4") Thêm mới sản phẩm 

    form(
        action=`${prefixAdmin}/products/create`
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
    )
    
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                class="form-control"
                id="title"
                name="title"
                type="text"
                required 
            ) 
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control"
                id="desc"
                name="description"
                row="5"
            )
        div(class="form-group")
            label(for="price") Giá
            input(
                class="form-control"
                id="price"
                name="price"
                type="number"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="discount") % Giảm giá
            input(
                class="form-control"
                id="discount"
                name="discountPercentage"
                type="number" 
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                class="form-control"
                id="stock"
                name="stock"
                type="number"
                value="0"
                min="0"
            )
        div(class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                type="file"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                upload-image-preview
                class="image-preview"
            )
        div(class="form-group")
            label(for="position") Vị trí
            input(
                class="form-control"
                id="position"
                name="position"
                type="number"
                placeholder="Tự động tăng"
                min="1"
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                name="status"
                id="statusActive"
                value="active"
                checked
            )
            label(class="form-check-label" for="statusInActive") hoạt động
        
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                name="status"
                id="statusInActive"
                value="inactive"
            )
            label(class="form-check-label" for="statusInActive") Dừng hoạt động

        div(class="form-group")
            button(
                type="submit" 
                class="btn btn-primary"
            ) Tạo mới       

    script(src="/admin/js/product.js")